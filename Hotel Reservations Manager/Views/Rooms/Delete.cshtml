@model HotelReservationsManager.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<h2>Delete Room</h2>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">@Model.RoomNumber</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>