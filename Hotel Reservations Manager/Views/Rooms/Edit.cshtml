@model HotelReservationsManager.Models.Room
@{
    ViewData["Title"] = "Edit Room";
}

<h2>Edit Room</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="RoomNumber" class="control-label"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="ViewBag.RoomTypes"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input asp-for="IsAvailable" class="form-check-input" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdultPricePerBed" class="control-label"></label>
        <input asp-for="AdultPricePerBed" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="AdultPricePerBed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ChildPricePerBed" class="control-label"></label>
        <input asp-for="ChildPricePerBed" class="form-control" type="number" step="0.01" min="0" />
        <span asp-validation-for="ChildPricePerBed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}